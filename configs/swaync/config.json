{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "layer-shell-cover-screen": true,
  "cssPriority": "user",
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 5,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "relative-timestamps": true,
  "control-center-width": 500,
  "control-center-height": 600,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "text-empty": "No Notifications",
  "script-fail-notify": true,
  "widgets": [
    "title#Main",
    "title#Controls",
    "buttons-grid",
    "volume",
    "backlight",
    "mpris",
    "title#Notifications",
    "notifications",
    "menubar#label"
  ],
  "widget-config": {
    "title#Main": {
      "text": "Control Center",
      "clear-all-button": false
    },
    "title#Controls": {
      "text": "Controls",
      "clear-all-button": false
    },
    "buttons-grid": {
      "actions": [
        {
          "label": " ",
          "type": "toggle",
          "active": false,
          "command": "swaync-client -d -sw",
          "update-command": "swaync-client -D"
        },
        {
          "label": " ",
          "type": "toggle",
          "active": false,
          "command": "~/.config/swaync/scripts/wifi.sh",
          "update-command": "nmcli radio wifi | grep -q enabled && echo true || echo false"
        },
        {
          "label": "󰂯",
          "type": "toggle",
          "active": false,
          "command": "~/.config/swaync/scripts/bluetooth.sh",
          "update-command": "bluetooth | grep -q 'bluetooth = on' && echo true || echo false"
        }
      ]
    },
    "volume": {
      "label": ""
    },
    "backlight": {
      "label": "󰃟",
      "device": "amdgpu_bl1"
    },
    "mpris": {
      "show-album-art": "always",
      "loop-carousel": false
    },
    "title#Notifications": {
      "text": "Notifications",
      "clear-all-button": true
    },
    "menubar#label": {
      "menu#power-buttons": {
        "label": "",
        "position": "right",
        "actions": [
          {
            "label": " Lock",
            "command": "hyprlock"
          },
          {
            "label": " Logout",
            "command": "exit"
          },
          {
            "label": " Suspend",
            "command": "systemctl suspend"
          },
          {
            "label": "󰒲 Hibernate",
            "command": "systemctl hibernate"
          },
          {
            "label": " Reboot",
            "command": "systemctl reboot"
          },
          {
            "label": " Shut down",
            "command": "systemctl poweroff"
          }
        ]
      },
      "menu#powermode-buttons": {
        "label": " ",
        "position": "left",
        "actions": [
          {
            "label": "  Balanced",
            "command": "powerprofilesctl set balanced && notify-send --app-name='Power' 'Power Profile' 'Switched to balanced'"
          },
          {
            "label": "  Power-saver",
            "command": "powerprofilesctl set power-saver && notify-send --app-name='Power' 'Power Profile' 'Switched to power-saver'"
          },
          {
            "label": "  Performance",
            "command": "powerprofilesctl set performance && notify-send --app-name='Power' 'Power Profile' 'Switched to performance'"
          }
        ]
      }
    }
  }
}